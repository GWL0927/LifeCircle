/* components/bubble /bubble.wxss */
.bubble-container {
  position: relative;
  display: flex;
  padding: 20rpx;
  margin-top: 5rpx;
}
.content {
  max-width: 55%;
  background-color: #ffffff;
  border-radius: 4px;
  padding: 6px 10px;
  word-break: break-all;
  font-size: 14px;
}
.icon {
  width: 36px;
  height: 36px;
  position: relative;
  margin-right: 28rpx;
}
.caret-left {
  width: 0;
  height: 0;
  border-width: 12rpx;
  border-color: transparent #ffffff transparent transparent;
  border-style: solid;
  position: absolute;
  right: -28rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 999;
}
.translate5Y {
  transform: translateY(5px);
}
.container-right {
  position: relative;
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
}
.content-right {
  max-width: 55%;
  background-color: #a8ea7c;
  border-radius: 4px;
  padding: 6px 10px;
  word-break: break-all;
  font-size: 14px;
}
.content > text, .content-right > text {
  line-height: 24px;
}
.content > image, .content-right > image {
  line-height: 24px;
  max-width: 100%;
  border-radius: 4px;
}
.icon-right {
  width: 36px;
  height: 36px;
  position: relative;
  margin-left: 28rpx;
}
.photo {
  width: 36px;
  height: 36px;
  border-radius: 4px;
  overflow: hidden;
}
.caret-right {
  width: 0;
  height: 0;
  border-width: 12rpx;
  border-color: transparent transparent transparent #a8ea7c;
  border-style: solid;
  position: absolute;
  left: -28rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
}

.nickname {
  font-size: 10px;
  color: #888888;
  position: absolute;
  top: 6px;
  left: 65px;
}
.translate10Y {
  transform: translateY(10px);
}