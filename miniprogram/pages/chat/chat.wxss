.chat-content {
  width: 100%;
  height: 92vh;
}
.chat-content .msgtime {
  color: #a6a6a6;
  text-align: center;
  font-size: 11px;
  margin: 2vh 0;
}
.input {
  position: absolute;
  bottom: 0;
  background-color: #f7f8fa;
  height: 8vh;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  box-shadow: 0px 0px 1px #888888;
}
.input input {
  width: 78vw;
  height: 6vh;
  background-color: #ffffff;
  margin-right: 1vw;
}
.input button {
  margin: 0;
  width: 18vw;
  height: 6vh;
  line-height: 6vh;
}